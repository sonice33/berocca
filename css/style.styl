.intro{
	height: 25%;
	padding-top: 80px;
	text-align: center; 
	background: url(../images/bg2.jpg);
	background-size: cover;
	background-blend-mode: screen; 
	background-color:#888;
	background-attachment: fixed;
	overflow: hidden;
	
	h2{ color: #333; margin-top: 60px; font-size: 35px;}
	
	.benefit_list{
		width: 1000px; 
		height: 100%;
		margin: 30px auto;
		background-image: url(../images/bg_bubbles.png);
		background-position: right top;
		background-size: cover;
		
		li{
			width: 200px; 
			height: 200px;
			padding: 50px 0;	
			border-radius: 50%;
			float:left;
			box-shadow: 2px 2px 10px #aaa;
			border: 10px solid orange;
			color: #333;
			background-color:#fff;
			
			img{ padding-top: 20px;}
			
			&:nth-child(2n+1){
				position:relative;
				top: 130px;
			}
		}
		
	}
}


.product{
	max-width: 1200px; 
	height: 25%;
	margin: 0 auto;
	padding-top: 80px;
	overflow: hidden;
	
	.product_img{ 
		float: left;
		width: 35%;
		overflow: hidden;
		
	}
	.product_img li{
		display: none;
		position: relative;
		height: 100%;
		
			.glass{
				width: 450px;
			}
			.pill{
				position: relative;
			}
		
		&:nth-child(1){
			
			display:block;
			width: 100%; 
			height: 100%;
	
			.pill{
				width: 120px;
				top: -500px;
				//top: -450px;
				left: 170px;
			}
		}
		
		&:nth-child(2){
			
			.pill{
				width: 220px;
				top: -400px;
				//top: -320px;
				left: 120px;
				opacity: 0.7;
			}
		}
		
	}
	
	.product_right{
		width: 65%;
		height: 100%;
		float:left;
		text-align: center;
		overflow: hidden;
	}
	
	.product_list{ 
		width: 100%;
		height: 100%;
		
		li{
			float: left;
			width: 48%;
			margin 0 1%;
//			padding: 20px;
			height: 100%;
			position: relative;
			bottom: 0;
			
			
			
			&:hover .bg{
				height: 95%;
			}
			
			&:hover .more{
				display: table;
			}
			
			.picture{
				width: 80%;
				position: absolute;
				bottom: 70px;
				left: 50%;
				transform: translateX(-50%);

				img{
					width:100%;
				}
			}
			
			.bg{
				background-color: rgba(255,200,0,0.5);
				border-radius: 30px 30px 0 0;
				width: 100%;
				height: 45%;
				position: absolute;
				bottom: 0px;
				z-index: -1;
				transition: all 0.5s;
			}
			
			.more{
				display:none;
				position: absolute;
				width: 100%;
				padding: 20px 30px;
				
				h3{
					margin-bottom: 20px;
				}
				p{
					line-height: 20px;
					
				}
			}
		}
	}
	
}

.faq{
	padding-top: 80px;
	max-width: 1200px;
	margin: 0 auto;
	height: 25%;
}
.faq h2{
	text-align: center;
	padding: 20px 0;
}
.faq_wrap{
	border: 1px solid #eee;
	height: 70%;
}
.faq_btn{
	width: 30%;
	height: 100%;
	border-right: 1px solid #eee;
	float: left;
	
	li{
		height: 50px;
		text-align: center;
		line-height: 50px;
		border-bottom: 1px solid #eee;
		
		
		a{ 
			color: #333;
			display: block;
			height: 100%;
		}
		
		&.on {
			background-color: #eee;
		}
	}
}
.faq_list{
	width: 70%;
	float: left;
	
	ul{
		padding: 20px 30px;
		position: absolute;
		display:none;
		
		&:nth-child(3){
			display: block;
		}
	}
	
	li{
		padding: 5px 0;
		.answer{
			display: none;
			padding-left: 20px;
			line-height: 20px;
		}
		
		.question{
			padding-bottom: 5px;
			
			.q_title{
				font-size: 1.2rem;
				&.on{
					color: green;
				}
			}
			.q_icon{
				background-color: #fc0;
				border-radius: 50%;
				padding: 2px 5px;
				color: #fff;
			}
			
			&:hover{
				color: #888;
			}
		}
	}
}

#footer{
	background-color: #ccc;
	
	.f_center{ 
		max-width: 1000px;
		margin: 0 auto;
		padding: 20px;
		
		p{
			margin: 10px 0;
			line-height: 25px;
		}
	}
	.f_wrap{
		
		p{
			float: left;
		}
		img{
			float: right;
		}
	}
}

