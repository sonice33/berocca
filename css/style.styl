@charset 'utf-8';

*{ margin: 0; padding: 0; box-sizing: border-box;}
ul,li,ol{ list-style: none;}
a{ text-decoration: none;}	
img{ border: none; vertical-align: top;}
table{ border-collapse: collapse;}
html,body{ height:100%; font-family: 'Nanum Gothic', 'Noto Sans', sans-serif;}
.clear::after{ content:''; display:block; clear: both;}

#header{ 
	position:fixed;
	background-color: #065c28;
	width: 100%;
	z-index:999;
}	
.h_center{ 
	width: 1200px; 
	margin: 0 auto;
	//height: px;
	
	.h_logo{ 
		width: 200px; 
		padding: 15px;
		margin: 0 30px;
		float: left;
		
		img{ width: 100%;}	
	}
	.gnb{ 
		float: right;
		padding-top: 10px;
		margin:20px 100px 0 0;
		//background-color: #0ff;
		
		li{ 
			float: left;
			padding: 0 20px;
			
      &.on::after{
				content: "";
				display: block;
				width: 100%;
				height: 2px;
				background-color: #fff;
				margin-top: 22px;
				position: relative;
				left: 0%;
			}
			
			a{ 
				color: #fff;
				font-weight: bold;
			}
		}
	}
}	
	
